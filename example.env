DATABASE_URL="postgresql://db_user:db_password@localhost:5432/database_name?schema=public"
# PostgreSQL database connection string
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME?schema=public

PORT=5000
# Port number where the backend server will run

URL=http://localhost:5000
# Base URL of the backend server (used for API calls, links, etc.)

FRONT_END_URL=http://localhost:3000
# Frontend application URL (used for CORS and redirects)

BETTER_AUTH_SECRET=your_super_secret_key_here
# Secret key for Better Auth (used for token/session encryption)

BETTER_AUTH_URL=http://localhost:3000
# Base URL of the app for Better Auth redirects (login/register)

APP_EMAIL=no-reply@example.com
APP_PASS=your_email_app_password_here
# Email credentials for Nodemailer or any email service
# Used for sending OTPs, verification emails, notifications

GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# Google OAuth 2.0 credentials
# Required for Google login or Google API access

ADMIN_EMAIL=admin@example.com
ADMIN_PASS=admin_password_here
ADMIN_NAME=Admin User
# Default admin user information
# Used during initial setup or seeding (e.g. `bun run seed:admin`)
