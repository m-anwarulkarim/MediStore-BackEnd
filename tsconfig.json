{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],

    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "allowJs": true,
    "esModuleInterop": true,

    "verbatimModuleSyntax": true,

    "strict": true,
    "skipLibCheck": true,

    "noEmit": false
    // "ignoreDeprecations": "6.0"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
